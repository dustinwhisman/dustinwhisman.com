{% macro projectCard(project, headingLevel) %}
<article class="cmp-project__card">
  <{{ headingLevel }} class="cmp-project__heading">
    {% if project.siteLink %}
      <a href="{{ project.siteLink }}">{{ project.name }}</a>
    {% else %}
      {{ project.name }}
    {% endif %}
  </{{ headingLevel }}>
  <p class="cmp-project__type cmp-project__type--{{ project.classification.replaceAll(' ', '-') | lower }}">
    {{ project.classification }}
  </p>
  <p>{{ project.description }}</p>
  {% if project.repoLink %}
    <p>
      <a href="{{ project.repoLink }}">
        View Source
        <span class="util-visually-hidden">
          for {{ project.name }}
        </span>
      </a>
    </p>
  {% endif %}
  <ul class="cmp-badge__list">
    {% for role in project.roles %}
      <li class="cmp-badge">{{ role }}</li>
    {% endfor %}
  </ul>
</article>
{% endmacro %}
