{% set previousPost = collections[collectionName] | getPreviousCollectionItem %}
{% set nextPost = collections[collectionName] | getNextCollectionItem %}

{% if previousPost or nextPost %}
<nav class="cmp-navigation cmp-navigation--basic-pagination" aria-label="Pagination">
	{% if previousPost %}
		<a href="{{ previousPost.url }}">{{ previousPost.data.articleTitle }}</a>
	{% endif %}
	{% if nextPost %}
		<a href="{{ nextPost.url }}">{{ nextPost.data.articleTitle }}</a>
	{% endif %}
</nav>
{% endif %}
