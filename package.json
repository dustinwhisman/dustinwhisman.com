{
  "name": "dustinwhisman-com",
  "version": "0.1.0",
  "description": "My very own personal website. How indie, how 2006.",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prestart": "check-node-version --package && npm run clean",
    "prebuild": "check-node-version --package && npm run clean",
    "start": "run-p eleventy:dev sass:dev js:dev",
    "build": "run-s eleventy:build sass:build js:build js:build:legacy",
    "eleventy:dev": "eleventy --serve --incremental",
    "eleventy:build": "eleventy",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "js:dev": "esbuild src/js/index.js --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/index.js --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "js:dev:legacy": "webpack --progress -w",
    "js:build:legacy": "webpack --progress",
    "clean": "rm -rf dist",
    "lint": "run-s lint:css lint:js",
    "lint:css": "stylelint \"src/scss/**/*.scss\" --color --formatter verbose",
    "lint:js": "eslint . --ext .js",
    "test": "vitest --passWithNoTests --run",
    "test:e2e": "cypress run --e2e",
    "test:open": "cypress open --e2e",
    "update-deps": "ncu -u",
    "postupdate-deps": "npm install",
    "optimize-images": "run-s images:jpg images:webp images:avif images:clean",
    "images:jpg": "cd pictures-of-cats && magick mogrify -auto-orient -strip -resize 640000@ -quality 70 -path ../src/public/images/cats *.jpg",
    "images:webp": "cd pictures-of-cats && magick mogrify -auto-orient -strip -resize 640000@ -quality 70 -format webP -path ../src/public/images/cats/webp *.jpg",
    "images:avif": "cd pictures-of-cats && magick mogrify -auto-orient -strip -resize 640000@ -quality 50 -format avif -path ../src/public/images/cats/avif *.jpg",
    "images:clean": "rm -rf pictures-of-cats/*.jpg"
  },
  "keywords": [],
  "author": "Dustin Whisman",
  "license": "CC BY 4.0",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.33",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^9.1.2",
    "check-node-version": "^4.2.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.3",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "npm-check-updates": "^16.6.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "vitest": "^0.27.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "browserslist": [
    ">0%",
    "not dead",
    "not supports es6-module"
  ],
  "dependencies": {
    "axe-core": "^4.6.2",
    "cypress": "^12.3.0",
    "cypress-axe": "^1.3.0",
    "cypress-each": "^1.13.1",
    "highlight.js": "^11.7.0",
    "image-size": "^1.0.2",
    "markdown-it": "^13.0.1"
  }
}
